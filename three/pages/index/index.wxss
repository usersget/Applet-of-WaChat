.item_list_group .hosite{
  width: 95%;
  height: 25px;
  border-radius: 12px;
  padding: 0 10px;
  background-color:#f1f1f1 ;
  margin: 0 auto;
}
.record{
  width: 100%;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid gainsboro;
}
.hosite .hosite_le{
  display: inline-block;
}
.hosite .hosite_ri{
  width: 80%;
  text-align: right;
  display: inline-block;
}
.item_list_group{
  padding: 10rpx 20rpx;

}
.item_list_group .item_group{
  padding: 10rpx 0;
  border-bottom: 1px solid #e4e4e4;
  display: flex;

}
.item_group image{
  width: 80rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.item_group .info_group{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.info_group .title{
  font-size: 32rpx;
}
.info_group .rate_year{
  font-size: 28rpx;
  color: #7b7b7b;
}