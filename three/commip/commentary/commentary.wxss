/* commip/commentary/commentary.wxss */
.paragrapher{
  width: 100%;
}
.paragrapher .paragrapher_bar{
   width: 100%;
   padding-top: 20rpx;
   display: flex;
}
.img{
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx 10rpx;
}
.img .head_portrait{
  width: 80rpx;
  height:80rpx;
  border-radius: 50rpx;
}
.message{
  width: 100%;
  display: flex;
  flex-wrap: wrap;

}
 .times{
  font-size: 28rpx;
  color: darkgray;
}
.nickname{
  width: 80%;
  height: 80rpx;
  display: flex;
  flex-wrap:wrap;
}
.message_text{
  font-size: 14px;
  font-family: "华文细黑";
}
.foot_button{
  display:flex;
  width: 100%;
  height: 80rpx;
}
.foot_button button{
  line-height: 80rpx;
  width: 40%;
  height: 100%;
  border-radius: 40rpx;
}

