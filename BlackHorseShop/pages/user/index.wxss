page {
  background-color: #edece8;
}
.user-info-wrap {
  height: 45vh;
  overflow: hidden;
  position: relative;
}
.user-info-wrap .user_img_wrap {
  position: relative;
}
.user-info-wrap .user_img_wrap .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user-info-wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user-info-wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user-info-wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  margin-top: 40rpx;
}
.user-info-wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40rpx;
  border: 1rpx  solid yellowgreen ;
  color: yellowgreen;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
.user_content {
  position: relative;
}
.user_content .uesr_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  color: #666;
  padding-bottom: 100rpx;
}
.user_content .uesr_main .history_wrap {
  background-color: #fff;
  display: flex;
}
.user_content .uesr_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .uesr_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_content .uesr_main .orders_wrap {
  background-color: #fff;
  margin-top: 30rpx;
}
.user_content .uesr_main .orders_wrap .orders_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .uesr_main .orders_wrap .orders_content {
  display: flex;
}
.user_content .uesr_main .orders_wrap .orders_content navigator {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}
.user_content .uesr_main .orders_wrap .orders_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.user_content .uesr_main .address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.user_content .uesr_main .app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .uesr_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .uesr_main .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .uesr_main .recommend_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
